@model List<Projeto_PW.Models.ProdutoModel>

<table class="table table-light">
    <tr>
        <td>Código</td>
        <td>Descrição</td>
        <td>Valor</td>
        <td>Data de Validade</td>
    </tr>
    @for (int i = 0; i < Model.Count; i++)
    {
        <tr>
            <td>@Model[i].Codigo</td>
            <td>@Model[i].Descricao</td>
            <td>@Model[i].Valor</td>
            <td>@Model[i].DataVencimento</td>
        </tr>
    }
</table>
